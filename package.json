{
  "name": "hapi-sample",
  "version": "2.5.13",
  "description": "hapi-sample",
  "main": "server.js",
  "scripts": {
    "test": "npm run lint && ./node_modules/lab/bin/lab -v -c test/**/*.spec.js",
    "test:watch": "npm-watch",
    "lint": "eslint . --ext .js",
    "doc": "./node_modules/.bin/jsdoc -c ./doc-config.json",
    "docker": "docker-compose -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.test.yml up",
    "docker:prod": "docker-compose up",
    "docker:login": "docker-compose -f docker-compose.dev.yml run -u root hapidev /bin/sh",
    "docker:rm": "docker rm $(docker ps -aqf status=exited)",
    "precommit": "npm run lint && npm test",
    "bump": "npm version --no-git-tag-version"
  },
  "keywords": [
    "dazn"
  ],
  "author": "DAZN",
  "private": true,
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "aws-sdk": "^2.22.0",
    "etag": "^1.8.0",
    "glue": "^4.1.0",
    "good": "^7.1.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.1",
    "hapi": "^16.1.0",
    "hapi-swagger": "^7.7.0",
    "inert": "^4.1.0",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "blipp": "^2.3.0",
    "code": "^4.0.0",
    "eslint": "^3.12.2",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.13.2",
    "jsdoc": "^3.4.3",
    "lab": "^11.2.1",
    "npm-watch": "^0.1.8",
    "sinon": "^1.17.7",
    "sinon-stub-promise": "^4.0.0"
  },
  "watch": {
    "test": {
      "patterns": [
        "api",
        "lib",
        "schemas",
        "test"
      ]
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    }
  }
}
